<decorators defaultdir="/WEB-INF/decorators">
	<!-- Any urls that are excluded will never be decorated by Sitemesh -->
	<excludes>
		<!-- <pattern>/m/*</pattern> -->
		<pattern>/css/*</pattern>
		<pattern>/js/*</pattern>
		<pattern>/api/*</pattern>
		<pattern>/sign/*</pattern>
		<pattern>/debug*</pattern>
	</excludes>

	<decorator name="main" page="main.jspx">
		<pattern>/*</pattern>
	</decorator>

	<decorator name="wiki" page="wiki.jspx">
		<pattern>/wiki/*</pattern>
		<pattern>/error/*</pattern>
		<pattern>/routes/*</pattern>
	</decorator>
	
	<decorator name="mobile" page="mobile.jspx">
		<pattern>/m/*</pattern>
	</decorator>

</decorators>
