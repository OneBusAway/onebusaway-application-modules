<html xmlns:jsp="http://java.sun.com/JSP/Page" xmlns:c="http://java.sun.com/jsp/jstl/core" xmlns:s="/struts-tags"
    xmlns:oba="/oba-tags">
<jsp:directive.page contentType="text/html" />
<head>
<title><s:text name="trip.Route"/> <jsp:text> </jsp:text> <s:property value="result.trip.route.shortName" /> 
- <s:property value="result.trip.tripHeadsign" /> - <s:text name="trip.Trip"/> <jsp:text> </jsp:text><s:property
    value="result.trip.Id" /></title>
</head>
<body>

<div id="tripPanel"><s:push value="result">

    <div class="tripPanelHeader">
    <div class="tripPanelHeaderRoute"><s:text name="trip.Route"/> <jsp:text> </jsp:text> 
    <s:property value="result.trip.route.shortName" /> - <s:property value="result.trip.tripHeadsign" /></div>
    <div class="tripPanelHeaderTripId"> <s:text name="trip.Trip"/> <jsp:text> </jsp:text> 
    <s:property value="result.trip.id" /></div>
    </div>

    <s:if test="schedule.previousTrip != null">
        <p><s:text name="trip.Incoming_Route"/>:<br/><a href="trip.action?id=${schedule.previousTrip.id}"><oba:routeName
            value="schedule.previousTrip.route" /> - <s:property
            value="schedule.previousTrip.tripHeadsign" /></a></p>
    </s:if>

    <div class="section">
    
    <oba:group value="schedule.stopTimes" var="groups">
        <s:property value="departureTime / 300" />
    </oba:group>
    
    <s:iterator value="#groups">
        <div class="TripPage-ArrivalTime"><oba:date format="hh:mm aa" value="getStopTime(top[0])" /></div>
        <ul class="buttons"><s:iterator>
            <li><a href="stop.action?id=${stop.id}"><s:property value="stop.name" /></a></li>
        </s:iterator></ul>
    </s:iterator></div>

    <s:if test="schedule.nextTrip != null">
        <p><s:text name="trip.Continues_as_Route"/>:<br/><a href="trip.action?id=${schedule.nextTrip.id}"><oba:routeName
            value="schedule.nextTrip.route" /> - <s:property
            value="schedule.nextTrip.tripHeadsign" /></a></p>
    </s:if>

</s:push>
</div>

</body>
</html>