<html xmlns:jsp="http://java.sun.com/JSP/Page"
    xmlns:c="http://java.sun.com/jsp/jstl/core" xmlns:s="/struts-tags"
    xmlns:oba="/oba-tags">
<jsp:directive.page contentType="text/html" />
<head>
<title><s:text name="BlockNum" /><jsp:text> </jsp:text><s:property value="blockInstance.blockId" /></title>
</head>
<body>

<div id="container">

    <h2><s:text name="BlockNum" /><jsp:text>
    </jsp:text><s:property value="blockInstance.blockId" /></h2>

    <ul>
        <s:iterator value="blockInstance.blockConfiguration.trips">
            <li>
            <s:a action="trip">
                <s:param name="id" value="trip.id"/>
                <s:param name="serviceDate" value="blockInstance.serviceDate"/>
              <oba:routeName value="trip" />
              <jsp:text> - </jsp:text>
              <s:property value="trip.tripHeadsign" />
            </s:a>
            <jsp:text> - </jsp:text>
            <oba:date timeStyle="short" format="hh:mm a" value="blockInstance.serviceDate + blockStopTimes[0].stopTime.departureTime * 1000"/>
            <jsp:text> - </jsp:text>
            <oba:date timeStyle="short" format="hh:mm a" value="blockInstance.serviceDate + blockStopTimes[blockStopTimes.size-1].stopTime.arrivalTime * 1000"/>
            </li>
        </s:iterator>
    </ul>

</div>

</body>
</html>