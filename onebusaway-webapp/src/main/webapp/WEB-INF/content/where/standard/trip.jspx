<html xmlns:jsp="http://java.sun.com/JSP/Page" xmlns:c="http://java.sun.com/jsp/jstl/core" xmlns:s="/struts-tags"
    xmlns:oba="/oba-tags">
<jsp:directive.page contentType="text/html" />
<head>
<title><s:text name="trip.Route"/> <jsp:text> </jsp:text><s:property value="result.trip.route.shortName" />
 - <s:property value="result.trip.tripHeadsign" /> - <s:text name="trip.Trip"/> <jsp:text> </jsp:text> <s:property
    value="result.trip.id" /></title>
<link rel="stylesheet" type="text/css" media="all" href="${oba:resource('/WEB-INF/css/where-standard-trip.css')}"/>
<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"><jsp:text></jsp:text></script>
<script type="text/javascript" src="${oba:url('/config.action')}"><jsp:text></jsp:text></script>
<script type="text/javascript" src="${oba:resource('CommonResources')}"><jsp:text></jsp:text></script>
<script type="text/javascript" src="${oba:resource('/js/oba-where-standard-trip.js')}"><jsp:text></jsp:text></script>
<script type="text/javascript">
  jQuery(document).ready(function() {

    var data = {};
    data.tripId = '<s:property escapeJavaScript="true" value="id" />';
    data.serviceDate = <s:property escapeJavaScript="true" value="serviceDate.time" />;
    data.time = <s:property escapeJavaScript="true" value="time.time" />;
<s:if test="stopId != null">
    data.stopId = '<s:property escapeJavaScript="true" value="stopId" />';
</s:if>
<s:if test="vehicleId != null">
    data.vehicleId = '<s:property escapeJavaScript="true" value="vehicleId" />';
</s:if>
    
    data.mapElement = jQuery("#map");

    oba_where_standard_trip(data);
  });
</script>    
</head>
<body>
<div id="container">
<div id="tripPanel">
<s:push value="result">

    <div class="tripPanelHeader">
      <div class="tripPanelHeaderRoute"><s:text name="trip.Route"/> <jsp:text> </jsp:text> <s:property value="trip.route.shortName" /> - <s:property value="trip.tripHeadsign" /></div>
      <div class="tripPanelHeaderTripId"><s:text name="trip.Trip"/> <jsp:text> </jsp:text> <s:property value="trip.id" /><s:if test="trip.id != trip.blockId"><jsp:text> - </jsp:text><s:a action="block"><s:param name="id" value="trip.blockId" /><s:param name="serviceDate" value="serviceDate"/><s:text name="BlockNum"/><jsp:text> </jsp:text><s:property value="trip.blockId" /></s:a></s:if></div>
    </div>
    
    <div id="mapAndSchedulePanel">

    <div id="mapPanel">
        
        <div id="map"><jsp:text></jsp:text></div>
        
        <s:component template="oba-stop-info-window-template.ftl">
            <s:param name="content">
                <p><s:a action="arrival-and-departure-for-stop"><s:text name="Realtime_arrival_info" /></s:a></p>
            </s:param>
        </s:component>
        
        <div id="mapLegendLabel"><s:text name="Legend"/></div>
        <table id="mapLegend">
            <tbody>
                <tr>
                    <td><img src="${oba:resource('collection-entry:Map:MapIcon-Bus-22.png')}" /></td>
                    <td><s:text name="trip.Transit_stop"/></td>
                </tr>
                <s:if test="stopId != null">
                <tr>
                    <td><img src="${oba:resource('collection-entry:Map:SelectionCircle36.png')}" /></td>
                    <td><s:text name="trip.Your_selected_stop"/></td>
                </tr>
                </s:if>
            </tbody>
        </table>
    </div>
    
    <div id="schedulePanel">
    
    <s:if test="status.vehicleId != null">
      <s:url var="url" action="vehicle-status">
        <s:param name="vehicleId" value="status.vehicleId"/>
      </s:url>
      
      <p><span class="tripPanelLabel"><s:text name="trip.Realtime_status"/>:</span> <s:a href="%{url}"><s:text name="trip.More_Info"/></s:a></p>
    </s:if>
    

    <s:if test="schedule.previousTrip != null">
        <s:url var="url" action="trip">
            <s:param name="id" value="schedule.previousTrip.id"/>
            <s:param name="serviceDate" value="serviceDate" />
            <s:param name="vehicleId" value="status.vehicleId"/>
        </s:url>
        <div class="block"><s:text name="trip.Incoming_Route"/>: <s:a href="%{url}"><oba:routeName
            value="schedule.previousTrip.route" /> - <s:property
            value="schedule.previousTrip.tripHeadsign" /></s:a></div>
    </s:if>

    <s:if test="schedule.frequency != null">
      <s:set var="freq" value="schedule.frequency"/>
      <div class="block">
      <p><s:text name="trip.Service_every"/><jsp:text> </jsp:text><span class="frequency">
      <s:property value="#freq.headway / 60"/></span> mins <jsp:text> </jsp:text>
      <s:text name="trip.from"/><jsp:text> </jsp:text> <oba:date format="hh:mm aa" value="#freq.startTime"/> 
      <jsp:text> </jsp:text><s:text name="trip.to"/><jsp:text> </jsp:text> <oba:date format="hh:mm aa" value="#freq.endTime"/></p>
      </div>
      
      <div class="block">
        
        <s:set var="firstStopTime" value="schedule.stopTimes[0]"/>
        
        <oba:group value="schedule.stopTimes" var="groups">
          <s:property value="departureTime / 300" />
        </oba:group>

        <table>
        <s:iterator value="#groups">
            <s:iterator status="groupStatus">
                <tr>
                    <td class="TripPage-TimeColumn"><s:if test="#groupStatus.first">
                        <span class="TripPage-ArrivalTime">
                          <s:property value="(top.arrivalTime - #firstStopTime.departureTime) / 60"/> mins
                        </span>
                    </s:if></td>
                    <td class="TripPage-StopColumn"><a href="stop.action?id=${stop.id}"><s:property value="stop.name" /></a></td>
                </tr>
            </s:iterator>
        </s:iterator>
        </table>
      
      </div>
    </s:if>
    <s:else>
    
    <div class="block">
    
    <oba:group value="schedule.stopTimes" var="groups">
        <s:property value="getStopTimeRaw(top) / 300" />
    </oba:group>

    <table>
        <s:set var="stopSequenceCount" value="0"/>
        <s:iterator value="#groups">
            <s:iterator status="groupStatus">
                
                <tr>
                    <td class="TripPage-TimeColumn"><s:if test="#groupStatus.first">
                        <span class="TripPage-ArrivalTime"> <oba:date format="hh:mm aa"
                            value="getStopTime(top)" /></span>
                    </s:if></td>
                    <td>
                    <jsp:element name="div">
                      <jsp:attribute name="class">TripPage-StopColumn<s:if test="stop.id == stopId"> TripPage-StopColumn-Selected</s:if></jsp:attribute>
                      <s:url var="url" action="arrival-and-departure-for-stop">
                        <s:param name="stopId" value="stop.id"/>
                        <s:param name="tripId" value="tripId"/>
                        <s:param name="serviceDate" value="serviceDate" />
                        <s:param name="vehicleId" value="status.vehicleId"/>
                        <s:param name="stopSequence" value="#stopSequenceCount" />
                      </s:url>
                      <s:a href="%{url}">
                        <s:property value="stop.name" />
                      </s:a>
                    </jsp:element>
                    </td>                    
                </tr>
                <s:set var="stopSequenceCount" value="#stopSequenceCount + 1"/>
            </s:iterator>
        </s:iterator>
    </table>
    </div>
    </s:else>

    <s:if test="schedule.nextTrip != null">
        <s:url var="url" action="trip">
            <s:param name="id" value="schedule.nextTrip.id"/>
            <s:param name="serviceDate" value="serviceDate" />
            <s:param name="vehicleId" value="status.vehicleId"/>
        </s:url>
        <div class="block"><s:text name="trip.Continues_as_Route"/>: <s:a href="%{url}"><oba:routeName
            value="schedule.nextTrip.route" /> - <s:property
            value="schedule.nextTrip.tripHeadsign" /></s:a></div>
    </s:if>
    
    </div>
    
    </div>

</s:push>
</div>
</div>

</body>
</html>