<beans xmlns="http://www.springframework.org/schema/beans" 
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context" 
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:jee="http://www.springframework.org/schema/jee"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
        http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
        http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-3.0.xsd">

    
    <!-- Configuration keys (and common defaults) may include:
         display.googleMapsClientId
         display.googleMapsSecretKey
         display.bingMapsKey
         display.useTimePredictions false
         display.atStopThresholdInFeet 100
         display.approachingThresholdInFeet 500
         display.distanceAsStopsTresholdInFeet 2640
         display.distanceAsStopsThresholdInStops 3
         display.distanceAsStopsMaximumThresholdInFeet 2640
         display.hideTimeout 300
         display.previousTripFilterDistance 5.0
         display.googleAdsClientId
         display.staleTimeout 120
         display.googleAnalyticsSiteId
         display.obaApiExcludeGaKey OBANYC
         display.mapCenterLat
         display.mapCenterLon
         display.mapZoom
         display.stalledTimeout
         -->
     
    <bean id="configurationServiceImpl" class="org.onebusaway.config_webapp.impl.ConfigurationServiceImpl">
        <property name="configurationValues">
            <map>
                <entry key="display.useTimePredictions" value="true"/>
                <entry key="display.useAgencyId" value="true"/>
                <entry key="display.showAgencyNames" value="true"/>
            </map>
        </property>
    </bean>

</beans>
