            <exclude>**/*.ai</exclude>
            <exclude>**/*.tagx</exclude>
            <exclude>**/*.swf</exclude>
            <exclude>**/*.mp3</exclude>
            <exclude>**/*.wav</exclude>
            <exclude>bin/**</exclude>
            <exclude>src/test/resources/**</exclude>
          </excludes>
        </configuration>
      </plugin>
    </plugins>
